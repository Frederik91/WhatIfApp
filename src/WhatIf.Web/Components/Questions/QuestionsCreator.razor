@inherits QuestionsCreatorComponentBase

<style>
    .demo-mat-card {
        max-width: 400px;
    }

    .demo-mat-card-content {
        padding: 1rem;
    }

    .demo-mat-card-clean-margin {
        margin: 0px;
    }
</style>
@foreach (var question in Questions)
{
    <h3 style="margin-bottom: 5px">@question.Title</h3>
    <QuestionCreator CreateQuestion="@question"></QuestionCreator>
}
<MatButton OnClick="@(async x => await Submit())">Submit</MatButton>
